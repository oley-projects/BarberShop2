<h3>Visit us</h3>

<p>Here you may visit our Barber Shop</p>

<form action="/visit" method="POST">

  <div class="form-group">
    <label>Your Name</label>
    <input name="client[name]" type="text" class="form-control" placeholder="Type your name here..." value="<%=@c.name%>">
  </div>

  <div class="form-group">
    <label>Your phone number</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Type your phone here..." value="<%=@c.phone%>">
  </div>

  <div class="form-group">
    <label>Where you come</label>
    <input name="client[datestamp]" type="text" class="form-control" id="datetimepicker" placeholder="Click here for choosing date and time" value="<%=@c.datestamp%>">
  </div>

  <div class="form-group">
    <label>Парикмахер</label>
    <select name="client[barber]" class="form-control">
      <% @barbers.each do |item| %>
        <option <%= @c.barber == item['name'] ? 'selected' : '' %>><%= item['name'] %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label>Цвет</label>
    <select name="client[color]" id="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>  

  <button type="submit" class="btn btn-success">Записаться</button>

</form>

<script type="text/javascript">

  $(function(){
    $('#color').simplecolorpicker();
    $('#datetimepicker').datetimepicker();
  });

</script>
